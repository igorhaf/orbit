{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://orbit.dev/schemas/frameworks.json",
  "title": "ORBIT Frameworks Metadata",
  "description": "Schema for frameworks.json metadata file that lists all available frameworks",
  "type": "object",
  "required": ["frameworks"],
  "properties": {
    "frameworks": {
      "type": "array",
      "description": "List of all available frameworks",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "category",
          "name",
          "display_name",
          "description",
          "is_active",
          "spec_count"
        ],
        "properties": {
          "category": {
            "type": "string",
            "description": "Framework category",
            "enum": ["backend", "frontend", "database", "css"]
          },
          "name": {
            "type": "string",
            "description": "Framework identifier (lowercase)",
            "enum": ["laravel", "nextjs", "postgresql", "tailwind"],
            "examples": ["laravel", "nextjs"]
          },
          "display_name": {
            "type": "string",
            "description": "Human-readable framework name",
            "minLength": 3,
            "maxLength": 50,
            "examples": ["Laravel (PHP)", "Next.js (React)", "PostgreSQL"]
          },
          "description": {
            "type": "string",
            "description": "Brief description of the framework",
            "minLength": 10,
            "maxLength": 200,
            "examples": ["PHP framework for web artisans", "React framework for production"]
          },
          "language": {
            "type": ["string", "null"],
            "description": "Primary programming language",
            "enum": ["php", "typescript", "javascript", "sql", "jsx", "tsx", "css", null],
            "examples": ["php", "typescript", "sql"]
          },
          "default_version": {
            "type": ["string", "null"],
            "description": "Default framework version",
            "pattern": "^[0-9]+(\\.[0-9]+)*(\\.[0-9]+)?$",
            "examples": ["11.0", "14.1.0", null]
          },
          "is_active": {
            "type": "boolean",
            "description": "Whether this framework is currently active",
            "default": true
          },
          "spec_count": {
            "type": "integer",
            "description": "Number of specifications available for this framework",
            "minimum": 0,
            "examples": [22, 17, 4]
          },
          "icon": {
            "type": "string",
            "description": "Icon identifier for UI display",
            "examples": ["database", "layout", "palette", "file-code"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "frameworks": [
        {
          "category": "backend",
          "name": "laravel",
          "display_name": "Laravel (PHP)",
          "description": "PHP framework for web artisans",
          "language": "php",
          "default_version": null,
          "is_active": true,
          "spec_count": 22,
          "icon": "database"
        },
        {
          "category": "frontend",
          "name": "nextjs",
          "display_name": "Next.js (React)",
          "description": "React framework for production",
          "language": "typescript",
          "default_version": null,
          "is_active": true,
          "spec_count": 17,
          "icon": "layout"
        }
      ]
    }
  ]
}
