{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://orbit.dev/schemas/spec.json",
  "title": "ORBIT Framework Specification",
  "description": "Schema for ORBIT framework specification files that reduce AI token usage by 70-85%",
  "type": "object",
  "required": [
    "id",
    "category",
    "name",
    "spec_type",
    "title",
    "description",
    "content",
    "language",
    "is_active"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier in format: {name}-{spec_type}",
      "pattern": "^[a-z0-9]+-[a-z0-9_]+$",
      "examples": ["laravel-controller", "nextjs-page", "postgresql-table"]
    },
    "category": {
      "type": "string",
      "description": "Framework category",
      "enum": ["backend", "frontend", "database", "css"],
      "examples": ["backend", "frontend"]
    },
    "name": {
      "type": "string",
      "description": "Framework name (lowercase)",
      "enum": ["laravel", "nextjs", "postgresql", "tailwind"],
      "examples": ["laravel", "nextjs"]
    },
    "spec_type": {
      "type": "string",
      "description": "Type of specification (e.g., controller, model, page, component)",
      "pattern": "^[a-z0-9_]+$",
      "minLength": 1,
      "maxLength": 50,
      "examples": ["controller", "model", "page", "component", "api_route"]
    },
    "title": {
      "type": "string",
      "description": "Human-readable title for the specification",
      "minLength": 3,
      "maxLength": 100,
      "examples": ["Laravel Controller", "Next.js Page Component", "PostgreSQL Table Definition"]
    },
    "description": {
      "type": "string",
      "description": "Brief description of what this specification covers",
      "minLength": 10,
      "maxLength": 500,
      "examples": ["Laravel controller with RESTful methods and dependency injection"]
    },
    "content": {
      "type": "string",
      "description": "The actual specification content/template with placeholders",
      "minLength": 10,
      "examples": ["<?php\n\nnamespace App\\Http\\Controllers;\n\nclass {ClassName} extends Controller\n{\n    public function index()\n    {\n        //\n    }\n}"]
    },
    "language": {
      "type": "string",
      "description": "Programming/markup language of the specification",
      "enum": ["php", "typescript", "javascript", "sql", "jsx", "tsx", "css", "html", "python", "blade"],
      "examples": ["php", "typescript", "sql", "blade"]
    },
    "framework_version": {
      "type": ["string", "null"],
      "description": "Specific framework version this spec targets (optional)",
      "pattern": "^[0-9]+(\\.[0-9]+)*(\\.[0-9]+)?$",
      "examples": ["11.0", "14.1.0", "16.3", null]
    },
    "ignore_patterns": {
      "type": "array",
      "description": "File/directory patterns to ignore when applying this spec",
      "items": {
        "type": "string",
        "pattern": "^[^\\s]+$"
      },
      "default": [],
      "examples": [
        ["node_modules/*", ".next/*", "vendor/*"],
        ["*.log", "*.cache"]
      ]
    },
    "file_extensions": {
      "type": "array",
      "description": "File extensions this spec applies to",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(\\.[a-z0-9]+)*$"
      },
      "minItems": 1,
      "default": [],
      "examples": [
        ["php"],
        ["ts", "tsx"],
        ["sql"],
        ["blade.php"],
        ["d.ts"]
      ]
    },
    "is_active": {
      "type": "boolean",
      "description": "Whether this specification is currently active",
      "default": true
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the specification",
      "properties": {
        "created_at": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the spec was created"
        },
        "updated_at": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the spec was last updated"
        },
        "author": {
          "type": "string",
          "description": "Author of the specification (optional)"
        },
        "tags": {
          "type": "array",
          "description": "Tags for categorization (optional)",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "id": "laravel-controller",
      "category": "backend",
      "name": "laravel",
      "spec_type": "controller",
      "title": "Laravel Controller",
      "description": "Laravel controller with RESTful methods",
      "content": "<?php\n\nnamespace App\\Http\\Controllers;\n\nclass {ClassName} extends Controller\n{\n    public function index()\n    {\n        //\n    }\n}",
      "language": "php",
      "framework_version": "11.0",
      "ignore_patterns": ["vendor/*", "storage/*"],
      "file_extensions": ["php"],
      "is_active": true,
      "metadata": {
        "created_at": "2025-12-29T10:00:32.556870Z",
        "updated_at": "2025-12-29T10:00:32.556873Z"
      }
    }
  ]
}
